<resources>
    <!-- Base application theme. -->
    <style name="Theme.MakeMoreMeat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gris</item>
        <item name="colorPrimaryVariant">@color/gris</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gris</item>
        <item name="colorSecondaryVariant">@color/gris</item>
        <item name="colorOnSecondary">@color/gris</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Theme for Butchers Dialog. -->
    <style name="AppDialogTheme" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
</resources>